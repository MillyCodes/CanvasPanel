<% if @students.blank? %>
      <p>There are not any students currently in the system.</p>
<% else %>
      <h2>Master student List</h2>

      <ul id = "students">
      <% @students.each do |c| %>
            <br>
            <img src="<%= c.avatar%>" alt="">
            <li>Name: <%= link_to c.full_name, {:action => 'show', :id => c.id} -%>

            <li>Enrolled In: <%= c.cohort.name%></li>
            <li>Contact: <%= c.email%></li>

            <li>
            <b> <%= link_to 'Edit', {:action => 'edit', :id => c.id} %></b>
            <b> <%= link_to "Delete", {:action => 'edit', :id => c.id}, :confirm => "Are you sure you want to delete this item?" %></b>
            </li>
      <% end %>
      </ul>

      <% end %>

      <p><%= link_to "Add new Student", {:action => 'new' }%></p>
