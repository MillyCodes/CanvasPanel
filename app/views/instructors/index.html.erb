<% if @instructors.blank? %>
      <p>There are currently no instructors in the system.</p>
<% else %>
      <h2>Instructor List</h2>
      <p><%= link_to "Add new Instructor", {:action => 'new' }%></p>
  
<div class="content d-flex row justify-content-around">
      <% @instructors.each do |instructor| %>

            <div class="card m-2" id="instructor-<%= instructor.id%>">
                  <div class="card-body bg-info rounded-top">

                        <h5 class="card-title"><%= link_to instructor.full_name, {:action => 'show', :id => instructor.id} -%></h5>
                        <p class="card-text"><%= instructor.email%> </p>
                  </div>

                  <% if instructor.avatar.attached? %>
                        <!--  use attached? to check presence -->
                        <img class="card-img-top img" src="<%= url_for(instructor.avatar) %>">
                        <% end %>


                  
                  <div class="card-footer text-right">
                        <small class="text-muted">
                              <button class="btn btn-sm btn-info"><%= link_to 'Edit', {:action => 'edit', :id => instructor.id} %></button>
                              <button class="btn btn-sm btn-info"><%= link_to 'Destroy', instructor_path(instructor), method: :delete, remote: true, data: { confirm: 'Are you sure?' } %></button>
                        </small>
                  </div>
            </div>
      <% end %>
</div>
<% end %>


