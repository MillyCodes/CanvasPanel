<% if @instructors.blank? %>
      <p>There are currently no instructors in the system.</p>
<% else %>
      <h2>Instructor List</h2>
      <p><%= link_to "Add new Instructor", {:action => 'new' }%></p>
  
<div class="content d-flex row justify-content-center">
      <% @instructors.each do |c| %>

            <div id="instructor-<%=c.id%>" class="card m-2">
                  <div class="card-body bg-info rounded-top">

                        <h5 class="card-title"><%= link_to c.full_name, {:action => 'show', :id => c.id} -%></h5>
                        <p class="card-text"><%= c.email%> </p>
                  </div>
                  <img class="card-img-top img" src="<%= c.avatar%>">
                  <div class="card-footer text-right">
                        <small class="text-muted">
                              <button class="btn btn-sm btn-info"><%= link_to 'Edit', {:action => 'edit', :id => c.id} %></button>
                              <button class="btn btn-sm btn-info"><%= link_to 'Destroy', instructor_path(c), method: :delete, remote: true, data: { confirm: 'Are you sure?' } %></button>
                        </small>
                  </div>
            </div>
      <% end %>
</div>
<% end %>


