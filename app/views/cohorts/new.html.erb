<h1>New Cohort</h1>


<%= form_with model: @cohort do |form| %>
 <%= form.label :course_id %>
 <%= form.collection_select :course_id, Course.all, :id, :coursename %>

<%= form.text_field :name, placeholder: "Cohort name"%>
<%= form.text_field :startdate, placeholder: "Start date"%>
<%= form.text_field :enddate, placeholder: "End date"%>
 <%= form.label :instructor_id %>
 <%= form.collection_select :instructor_id, Instructor.all, :id, :full_name %>


<%= form.submit%>
<% end%>


<%= link_to 'Back', {:action => 'index'} %>
